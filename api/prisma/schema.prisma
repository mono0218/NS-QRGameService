generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  username  String
  UserPoint UserPoint[]

  Qrcode Qrcode[]
}

model Service {
  id        String      @id @default(uuid())
  name      String
  hashKey   String
  UserPoint UserPoint[]
  Qrcode    Qrcode[]
}

model UserPoint {
  id        String  @id @default(uuid())
  userId    String
  user      User    @relation(fields: [userId], references: [id])
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])
  point     Int
}

model Qrcode {
  id        String  @id @default(uuid())
  userId    String?
  user      User?   @relation(fields: [userId], references: [id])
  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])
}
